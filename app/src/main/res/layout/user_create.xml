<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User_Create">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!--전체 감싸고 있는 부분-->
        <LinearLayout
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--상단바-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/black"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="FRIENDS DIARY"
                    android:textColor="@color/white"
                    android:textSize="30dp"></TextView>

            </LinearLayout>

            <!--프로필 부분-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/ll_profile"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/main_plus_bt"
                        android:elevation="8dp"
                        android:orientation="horizontal"

                        app:layout_constraintEnd_toStartOf="@+id/et_user_name"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

                    <EditText
                        android:id="@+id/et_user_name"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="121dp"
                        android:backgroundTint="#2E2E2E"
                        android:gravity="top"
                        android:hint=" 이름 입력"
                        android:maxLength="4"
                        android:textColor="#252525"
                        android:textColorHighlight="#B5B5B5"
                        android:textColorHint="#ACACAC"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"></EditText>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginEnd="100dp"
                        android:src="@drawable/user_create_pen_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <!--구분선-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#E8E8E8"
                android:orientation="horizontal"></LinearLayout>


            <!--MBTI 부분-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="17dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="MBTI"
                        android:textColor="@color/black"
                        android:textSize="23dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="27dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="E"
                        android:textColor="#686868"
                        android:textSize="24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/btn_ENFP"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_weight="1"
                            android:background="@drawable/mbti_bt"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:text="ENFP"
                            android:textColor="#7a7a7a"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/btn_ENFJ"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_weight="1"
                            android:background="@drawable/mbti_bt"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:text="ENFJ"
                            android:textColor="#7a7a7a"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/btn_ENTP"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_weight="1"
                            android:background="@drawable/mbti_bt"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:text="ENTP"
                            android:textColor="#7a7a7a"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/btn_ENTJ"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_weight="1"
                            android:background="@drawable/mbti_bt"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:text="ENTJ"
                            android:textColor="#7a7a7a"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp">

                        <TextView
                            android:id="@+id/btn_ESFP"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_weight="1"
                            android:background="@drawable/mbti_bt"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:text="ESFP"
                            android:textColor="#7a7a7a"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/btn_ESFJ"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_weight="1"
                            android:background="@drawable/mbti_bt"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:text="ESFJ"
                            android:textColor="#7a7a7a"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/btn_ESTJ"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_weight="1"
                            android:background="@drawable/mbti_bt"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:text="ESTJ"
                            android:textColor="#7a7a7a"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/btn_ESTP"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_weight="1"
                            android:background="@drawable/mbti_bt"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:text="ESTP"
                            android:textColor="#7a7a7a"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="27dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="I"
                            android:textColor="#686868"
                            android:textSize="24dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/btn_INFP"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:layout_weight="1"
                                android:background="@drawable/mbti_bt"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center"
                                android:paddingTop="2dp"
                                android:text="INFP"
                                android:textColor="#7a7a7a"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/btn_INFJ"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:layout_weight="1"
                                android:background="@drawable/mbti_bt"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center"
                                android:paddingTop="2dp"
                                android:text="INFJ"
                                android:textColor="#7a7a7a"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/btn_INTP"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:layout_weight="1"
                                android:background="@drawable/mbti_bt"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center"
                                android:paddingTop="2dp"
                                android:text="INTP"
                                android:textColor="#7a7a7a"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/btn_INTJ"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:layout_weight="1"
                                android:background="@drawable/mbti_bt"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center"
                                android:paddingTop="2dp"
                                android:text="INTJ"
                                android:textColor="#7a7a7a"
                                android:textSize="20dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="20dp">

                            <TextView
                                android:id="@+id/btn_ISFP"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:layout_weight="1"
                                android:background="@drawable/mbti_bt"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center"
                                android:paddingTop="2dp"
                                android:text="ISFP"
                                android:textColor="#7a7a7a"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/btn_ISFJ"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:layout_weight="1"
                                android:background="@drawable/mbti_bt"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center"
                                android:paddingTop="2dp"
                                android:text="ISFJ"
                                android:textColor="#7a7a7a"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/btn_ISTJ"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:layout_weight="1"
                                android:background="@drawable/mbti_bt"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center"
                                android:paddingTop="2dp"
                                android:text="ISTJ"
                                android:textColor="#7a7a7a"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/btn_ISTP"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:layout_weight="1"
                                android:background="@drawable/mbti_bt"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center"
                                android:paddingTop="2dp"
                                android:text="ISTP"
                                android:textColor="#7a7a7a"
                                android:textSize="20dp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <!--구분선-->
                <LinearLayout
                    android:layout_marginTop="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#E8E8E8"
                    android:orientation="horizontal"></LinearLayout>

                <!--LIKE 부분-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="411dp"
                            android:layout_height="38dp"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tv_like"
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/inter_medium"
                                android:text="LIKE"
                                android:textColor="@color/black"
                                android:textSize="23dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/linearLayout" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_like"
                            android:layout_width="360dp"
                            android:layout_height="280dp"
                            android:layout_marginTop="80dp"
                            android:layout_marginEnd="28dp"
                            android:background="#F4F4F4"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">


                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <EditText
                                    android:id="@+id/et_like"
                                    android:layout_width="330dp"
                                    android:layout_height="250dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="12dp"
                                    android:background="@null"
                                    android:fontFamily="@font/inter_medium"
                                    android:gravity="top"
                                    android:hint="친구가 좋아하는 것을 적어보세요!
                            (ex: 떡볶이,폼폼푸린,지브리)"
                                    android:textColor="#303030"
                                    android:textColorHighlight="#B5B5B5"
                                    android:textColorHint="#ACACAC"></EditText>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/tv_like_length"
                                        android:layout_width="50dp"
                                        android:layout_height="25dp"
                                        android:layout_marginTop="238dp"
                                        android:layout_marginEnd="18dp"
                                        android:text=""
                                        android:textColor="#A1A1A1"
                                        android:textSize="15dp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"></TextView>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </FrameLayout>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <!--구분선-->
                <LinearLayout
                    android:layout_marginTop="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#E8E8E8"
                    android:orientation="horizontal"></LinearLayout>

                <!--HATE 부분-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/ll_hate"
                            android:layout_width="411dp"
                            android:layout_height="38dp"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tv_hate"
                                android:layout_width="70dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/inter_medium"
                                android:text="HATE"
                                android:textColor="@color/black"
                                android:textSize="23dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/linearLayout1" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout1"
                            android:layout_width="360dp"
                            android:layout_height="280dp"
                            android:layout_marginTop="80dp"
                            android:layout_marginEnd="28dp"
                            android:background="#F4F4F4"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">


                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <EditText
                                    android:id="@+id/et_hate"
                                    android:layout_width="330dp"
                                    android:layout_height="250dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="12dp"
                                    android:background="@null"
                                    android:fontFamily="@font/inter_medium"
                                    android:gravity="top"
                                    android:hint="친구가 싫어하는 것을 적어보세요!
                                (ex: 연근,개발,탄산)"
                                    android:textColor="#303030"
                                    android:textColorHighlight="#B5B5B5"
                                    android:textColorHint="#ACACAC"></EditText>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/tv_hate_length"
                                        android:layout_width="50dp"
                                        android:layout_height="25dp"
                                        android:layout_marginTop="238dp"
                                        android:layout_marginEnd="18dp"
                                        android:text=""
                                        android:textColor="#A1A1A1"
                                        android:textSize="15dp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"></TextView>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </FrameLayout>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <!--구분선-->
                <LinearLayout
                    android:layout_marginTop="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#E8E8E8"
                    android:orientation="horizontal"></LinearLayout>

                <!--한줄 소개 부분-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/ll_introduction"
                            android:layout_width="411dp"
                            android:layout_height="38dp"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tv_introduction"
                                android:layout_width="200dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/inter_medium"
                                android:text="INTRODUCTION"
                                android:textColor="@color/black"
                                android:textSize="23dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/linearLayout1" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_introduction2"
                            android:layout_width="360dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="80dp"
                            android:layout_marginEnd="28dp"
                            android:background="#F4F4F4"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">


                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <EditText
                                    android:id="@+id/et_introduction"
                                    android:layout_width="330dp"
                                    android:layout_height="165dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="12dp"
                                    android:background="@null"
                                    android:fontFamily="@font/inter_medium"
                                    android:gravity="top"
                                    android:hint="친구에 대한 한줄 멘트를 남겨보세요!
                                (ex: 엄청 밝고,배려심 넘치는 친구)"
                                    android:textColor="#303030"
                                    android:textColorHighlight="#B5B5B5"
                                    android:textColorHint="#ACACAC"></EditText>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/tv_introduction_length"
                                        android:layout_width="50dp"
                                        android:layout_height="25dp"
                                        android:layout_marginTop="152dp"
                                        android:layout_marginEnd="18dp"
                                        android:text=""
                                        android:textColor="#A1A1A1"
                                        android:textSize="15dp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"></TextView>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </FrameLayout>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <!--구분선-->
                <LinearLayout
                    android:layout_marginTop="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#E8E8E8"
                    android:orientation="horizontal"></LinearLayout>

